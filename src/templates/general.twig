{% extends 'pragmatic-plus18/_layout' %}
{% import '_includes/forms' as forms %}

{% set title = 'General'|t('pragmatic-plus18') %}
{% set selectedTab = 'general' %}

{% set crumbs = [
  { label: '+18', url: url('pragmatic-plus18', { site: selectedSite.handle }) },
  { label: 'General'|t('pragmatic-plus18'), url: url('pragmatic-plus18/general', { site: selectedSite.handle }) },
] %}
{% set underageUrls = settings.underageUrls ?? {} %}
{% set underageUrlValue = underageUrls[selectedSiteId] ?? '' %}

{% block content %}
  <form method="post" accept-charset="UTF-8">
    {{ csrfInput() }}
    {{ actionInput('plugins/save-plugin-settings') }}
    {{ hiddenInput('pluginHandle', 'pragmatic-plus18') }}
    {{ redirectInput('pragmatic-plus18/general', { site: selectedSite.handle }) }}

    {{ forms.lightswitchField({
      label: 'Popup active'|t('pragmatic-plus18'),
      instructions: 'Shows the +18 verification popup on all frontend pages.'|t('pragmatic-plus18'),
      id: 'enabled',
      name: 'settings[enabled]',
      on: settings.enabled ?? true,
    }) }}

    {{ forms.textField({
      label: 'Cookie name'|t('pragmatic-plus18'),
      id: 'cookieName',
      name: 'settings[cookieName]',
      required: true,
      value: settings.cookieName ?? 'silverbranch_age_check',
      instructions: 'Identifier of the cookie that stores the age confirmation.'|t('pragmatic-plus18'),
    }) }}

    {{ forms.textField({
      label: 'Cookie duration (days)'|t('pragmatic-plus18'),
      id: 'cookieDays',
      type: 'number',
      min: 1,
      name: 'settings[cookieDays]',
      value: settings.cookieDays ?? 1,
      instructions: 'Number of days before showing the popup again.'|t('pragmatic-plus18'),
    }) }}

    {{ forms.textField({
      label: 'Minimum age'|t('pragmatic-plus18'),
      id: 'minimumAge',
      type: 'number',
      min: 1,
      name: 'settings[minimumAge]',
      value: settings.minimumAge ?? 18,
      instructions: 'Informational value to display in the modal (default 18).'|t('pragmatic-plus18'),
    }) }}

    {{ forms.textField({
      label: 'Logo URL'|t('pragmatic-plus18'),
      id: 'logoUrl',
      name: 'settings[logoUrl]',
      value: settings.logoUrl ?? '',
      instructions: 'Example: /assets/images/age-verification-logo.svg'|t('pragmatic-plus18'),
    }) }}

    {{ forms.lightswitchField({
      label: 'Show "No" button'|t('pragmatic-plus18'),
      instructions: 'If active, shows a button to exit the site.'|t('pragmatic-plus18'),
      id: 'showNoButton',
      name: 'settings[showNoButton]',
      on: settings.showNoButton ?? false,
    }) }}

    {{ forms.textField({
      label: 'URL for underage users ("No" button)'|t('pragmatic-plus18'),
      id: 'underageUrl',
      name: 'settings[underageUrls][' ~ selectedSiteId ~ ']',
      value: underageUrlValue,
      instructions: 'If not specified, https://www.google.com will be used.'|t('pragmatic-plus18'),
      translatable: true,
    }) }}

    <div class="buttons">
      <button type="submit" class="btn submit">{{ 'Save'|t('pragmatic-plus18') }}</button>
    </div>
  </form>
{% endblock %}
